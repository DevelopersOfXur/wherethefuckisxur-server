<div class="home-xur">
    
    {{#if page.vendors.xur}}
    <div class="white-box home-xur-box xur-inventory">
        <h1 class="box-title">Xûr's Inventory</h1>
        <div class="vendor-sales">
            {{#each page.vendors.xur.items}}
            <div class="vendor-item">
                {{> vendoritem}}
                <hr>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
</div>

<div class="home-data-container">
    <div class="home-data white-box">
        <h2 class="box-title">Dailies</h2>
        <ul id="dailies">
            <li class="dailies-today item">{{page.cycles.dailies.current}}</li>
            <li class="dailies-and-then">And then...</li>
            {{#each page.cycles.dailies.next}}
            <li class="dailies-future sub-item">{{this}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="home-data white-box">
        <h3 class="box-title">Nightfalls</h3>
        <ul id="nightfalls">
            {{#each page.cycles.activenightfalls}}
            <li class="item">
                <p>{{this}}</p>
            </li>
            {{/each}}
        </ul>
    </div>

    <div class="home-data spider white-box">
        <h2 class="box-title">The Spider</h2>
        <h4 class="box-subtitle">Big Fat Fallen</h4>
        <ul id="spiderinv" class="home-spiderinv">
            {{#each page.vendors.spider.items}}
            <li class="home-spiderinv-item">
                <span class="item">{{noPurchase display.name}}</span><br />
                {{#each costs}}
                <span class="item-description">{{amount}} {{display.name}}</span>
                {{/each}}
            </li>
            {{/each}}
            
        </ul>
        <a class="guide-link" href="/data/vendor/863940356">More Spider Deets</a>
    </div>

    <div class="home-data white-box">
        <h2 class="box-title">Ada-1</h2>
        <h4 class="box-subtitle">Robo got ya weapons</h4>
        <ul id="spiderinv">
            {{#each page.vendors.ada.items}}
            <li>
                <span class="item">{{display.name}}</span><br />
            </li>
            {{/each}}
        </ul>
        <a class="guide-link" href="/data/vendor/2917531897">More From Ada</a>
    </div>

    <div class="home-data white-box">
        <h2 class="box-title">Banshee-44</h2>
        <h4 class="box-subtitle">Who are you</h4>
        <ul id="spiderinv">
            {{#each page.vendors.banshee.items}}
            <li>
                <span class="item">{{display.name}}</span><br />
            </li>
            {{/each}}
        </ul>
    </div>
</div>

